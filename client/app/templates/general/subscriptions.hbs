<div class="container-fluid">
  <div class="row add-inventory-form-header">
    <div class="col-xs-4">
      <label>First Name</label>
    </div>
    <div class="col-xs-4">
      <label>Last Name</label>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-4 form-group">
      {{input type="text" value=first class="form-control" }}
    </div>
    <div class="col-xs-4 form-group">
      {{input type="text" value=last class="form-control" }}
    </div>
    <div class="col-xs-2">
      <button class="btn btn-default btn-block" {{action "searchForMember"}}>Search</button>
    </div>
    <div class="col-xs-1">
      <button class="btn btn-default center-block" data-toggle="modal" data-target="#newMemberModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      {{model.first_name}}
    </div>
  </div>
  <hr>
  <div class="row add-inventory-form-header">
    <div class="col-xs-9">
      <label>Add Series:</label>
    </div>
    <div class="col-xs-3">
      <label>QTY</label>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-8">
      {{ember-selectize
        content=allComics
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selection=comic
        placeholder="Select an Comic" }}
    </div>
    <div class="col-xs-2">
      {{input class="form-control" value=quanity type="number"}}
    </div>
    <div class="col-xs-2">
      <button class="btn btn-default btn-block" {{action "addItemToBox" model.box.id}}>Add Item</button>
    </div>
  </div>
  <div class="row add-inventory-form-header">
    <div class="col-xs-12">
      <label>Current Subscriptions: </label>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      {{#each model.box.Items as |item|}}
        <h6>{{item.name}}<span class="right-align"><button class="btn btn-danger" {{action "removeItemToBox" item}}><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button></span></h6>
        {{else}}
        Nothing HERE!!
      {{/each}}
    </div>
  </div>
</div>
<div id="newMemberModal" class="modal fade" tabindex="-1" role="dialog">

  <div class="modal-dialog">
    <div class="modal-content" >
      <div class="modal-header" style="background-color:	#677578; color:white;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add a New Member</h4>
      </div>
      <form {{action 'addMember' on='submit'}}>
        <div class="modal-body" style="background-color: #15b9d6; color:white;">
          <div class="form-group">
            <label for="firstName">First Name</label>
            {{input type="text" value=newFirstName class="form-control" }}
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            {{input type="text" value=newLastName class="form-control" }}
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            {{input type="email" value=newEmail class="form-control" }}
          </div>
          <div class="form-group">
            <label for="phonenumber">Phonenumber</label>
            {{input type="text" value=newPhonenumber class="form-control" }}
          </div>
      </div>
      <div class="modal-footer" style="background-color:	#677578; color:white;">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-default">Add Member</button>
      </div>
    </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
